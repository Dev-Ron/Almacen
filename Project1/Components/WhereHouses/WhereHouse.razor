@using Entities
@using Bussiness
@using DevExpress.Blazor
@using Newtonsoft.Json
@inject B_WhereHouse WhereHouseService

<EditForm Model="@WhereHouseToSave" Context="EntitiesContext">
    <DataAnnotationsValidator />
    <DxFormLayout Data="@WhereHouseToSave">
        <DxFormLayoutItem Field="@nameof(WhereHouseEntity.Name)" Caption="Nombre del Almacen:" ColSpanMd="6">
            <Template>
                <DxTextBox @bind-Text="@WhereHouseToSave.Name" />
            </Template>
        </DxFormLayoutItem>
        <DxFormLayoutItem Field="@nameof(WhereHouseEntity.Direccion)" Caption="Direccion del Almacen:" ColSpanMd="6">
            <Template>
                <DxTextBox @bind-Text="@WhereHouseToSave.Direccion" />
            </Template>
        </DxFormLayoutItem>
        <DxFormLayoutItem ColSpanMd="12">
            <Template>
                <ValidationSummary />
            </Template>
        </DxFormLayoutItem>
    </DxFormLayout>
</EditForm>

@code {
    [Parameter]
    public WhereHouseEntity WhereHouseToSave { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (WhereHouseToSave == null)
        {
            WhereHouseToSave = new WhereHouseEntity();
        }
    }
}